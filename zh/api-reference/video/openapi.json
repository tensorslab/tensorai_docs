{
  "openapi": "3.0.3",
  "info": {
    "title": "视频服务 API",
    "description": "视频生成服务 API - 提供多种AI视频生成、任务查询和历史记录功能",
    "version": "1.0.0",
    "contact": {
      "name": "API Support"
    }
  },
  "servers": [
    {
      "url": "https://test.tensorai.tensorslab.com",
      "description": "开发环境"
    }
  ],
  "tags": [
    {
      "name": "视频生成",
      "description": "视频生成相关接口"
    },
    {
      "name": "任务管理",
      "description": "任务管理相关接口"
    }
  ],
  "paths": {
    "/v1/video/seedancev1": {
      "post": {
        "tags": [
          "视频生成"
        ],
        "summary": "SeeDance-1.0 lite接口",
        "description": "使用 SeeDance-1.0 轻量版模型生成视频",
        "operationId": "seeDanceV1Lite",
        "x-mintlify-slug": "seedancev1",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "提示词描述"
                  },
                  "sourceImage": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    },
                    "description": "源图片文件（1-2张）"
                  },
                  "imageUrl": {
                    "type": "string",
                    "description": "源图片URL，多个图片用逗号分隔"
                  },
                  "ratio": {
                    "type": "string",
                    "description": "视频宽高比",
                    "default": "9:16"
                  },
                  "duration": {
                    "type": "integer",
                    "description": "视频时长（秒）",
                    "enum": [
                      5,
                      10
                    ],
                    "default": 5
                  },
                  "seed": {
                    "type": "integer",
                    "description": "随机种子"
                  },
                  "resolution": {
                    "type": "string",
                    "description": "视频分辨率",
                    "enum": [
                      "480p",
                      "720p",
                      "1080p"
                    ],
                    "default": "720p"
                  },
                  "fps": {
                    "type": "string",
                    "description": "帧率",
                    "default": "24"
                  },
                  "camerafixed": {
                    "type": "string",
                    "description": "固定相机，1为启用",
                    "enum": [
                      "0",
                      "1"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "请求成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
